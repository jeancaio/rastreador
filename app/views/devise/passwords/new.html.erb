<div class='row'>
  <h4><%= t(".forgot_your_password") %></h4>
</div>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class='row'>
    <%= f.input :email, wrapper_html: { class: 'm12 s12' } %>
  </div>
  <div class='row'>
    <div class='col s12'>
      <%= f.submit t(".send_me_reset_password_instructions"), class: 'col s12 waves-effect waves-light btn cyan' %>
    </div>
  </div>
<% end %>
<%= render_devise_view_links %>
