<div class='row'>
  <h4><%= 'Alterar senha' %></h4>
</div>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <%= f.input :password, autocomplete: "off", required: false, label: t(".password"), wrapper_html: { class: 'm12 s12' } %>
  </div>
  <div class="row">
    <%= f.input :password_confirmation, label: t(".password_confirmation"), required: false, wrapper_html: { class: 'm12 s12' } %>
  </div>
  <div class="row">
    <%= f.input :current_password, label: t(".current_password"), required: true, wrapper_html: { class: 'm12 s12' } %>
  </div>
  <div class="row">
    <%= button_tag(type: 'submit', class: "col s12 waves-effect waves-light btn cyan") do %>
      <%= t(".update") %>
    <% end %>
  </div>
<% end %>
<div class="row">
  <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>
</div>
<div class="row">
  <%= link_to t("devise.shared.links.back"), root_path %>
</div>
